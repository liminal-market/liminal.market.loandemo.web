{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "app/js",
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/html/*.html"],
  "files": [
    "./src/main.ts",
    "./src/global.d.ts",
    "./src/html.d.ts"
  ],
  "compileOnSave": true,

}